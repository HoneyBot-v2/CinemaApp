<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinema.MAUI.Pages.ProfilePage"
             Shell.PresentationMode="ModalAnimated"
             BackgroundColor="#130B2B">
    <VerticalStackLayout>
        <Grid ColumnDefinitions="1*,9*"
              ColumnSpacing="20"
              Margin="20">
            <Image Source="privacy.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Grid.Row="0"
                   VerticalOptions="Center"/>
            <Label Text="Privacy &amp; Security"
                   TextColor="White"
                   Grid.Column="1"
                   VerticalOptions="Center"/>
        </Grid>
        <Grid ColumnDefinitions="1*,9*"
              ColumnSpacing="20"
              Margin="20">
            <Image Source="support.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Grid.Row="0"
                   VerticalOptions="Center"/>
            <Label Text="Help and Support"
                   TextColor="White"
                   Grid.Column="1"
                   VerticalOptions="Center"/>
        </Grid>
        <Grid ColumnDefinitions="1*,9*"
              ColumnSpacing="20"
              Margin="20">
            <Image Source="about.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Grid.Row="0"
                   VerticalOptions="Center"/>
            <Label Text="About"
                   TextColor="White"
                   Grid.Column="1"
                   VerticalOptions="Center"/>
        </Grid>
        <Grid ColumnDefinitions="1*,9*"
              ColumnSpacing="20"
              Margin="20">
            <Image Source="logout.png"
                   HeightRequest="30"
                   WidthRequest="30"
                   Grid.Row="0"
                   VerticalOptions="Center"/>
            <Label Text="Log Out"
                   TextColor="White"
                   Grid.Column="1"
                   VerticalOptions="Center"/>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer x:Name="TapLogout" Tapped="TapLogout_Tapped"/>
            </Grid.GestureRecognizers>
        </Grid>
    </VerticalStackLayout>
</ContentPage>